---
import '../styles/global.css'
import BaseLayout from '@layouts/Base/BaseLayout.astro'
import CallToAction from '@components/HomePageSections/CallToAction.astro'
import Header from '@components/Section/Header.astro'
import GetStacks from '@components/Stack/GetStacks.astro'

const pageTitle = 'About Me'
const pageDescription = 'Explore the full tech stack used by Tudor Ciobanu, a web developer specializing in Laravel and WordPress. Discover my tools, from PHP and Docker to front-end frameworks like Tailwind, and see how I build amazing projects.'

---

<BaseLayout pageTitle={pageTitle}>
	<section>
		<Header title="My Tech Stack" icon="ph:stack" desc="I work with the following tools:" />

		<GetStacks />
	</section>
	<CallToAction />
</BaseLayout>
